<%= render partial: "partials/add_new_link" %>

<div class="links_list">
  <% @links.each do |link| %>
    <div class="link_item" data-link-id="<%= link.id %>">
      <h3><%= link.title %></h3>
      <%= link_to link.url %>
      <p>
        Read status: <%= link.read %>
      </p>
      <div class="link_controlls">
        <%= button_to "Mark as Read", edit_link_path(link), class: "mark-as-read"%>
        <%= link_to "Edit Link", edit_link_path(link) %>
      </div>
    </div>
  <% end %>
</div>
